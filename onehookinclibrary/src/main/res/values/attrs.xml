<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OHPagerIndicator">
        <attr name="oh_pager_indicator_selected_color" format="color|reference"></attr>
        <attr name="oh_pager_indicator_default_color" format="color|reference"></attr>
    </declare-styleable>

    <declare-styleable name="AnimatedProgressView">
        <attr name="oh_progress_view_primary_color" format="color|reference" />
        <attr name="oh_progress_view_base_color" format="color|reference" />
        <attr name="oh_progress_view_text_color" format="color|reference" />
        <attr name="oh_progress_view_circile_background_color" format="color|reference" />
        <attr name="oh_progress_view_progress" format="float" />
        <attr name="oh_progress_view_bottom_ring_progress" format="float" />
        <attr name="oh_progress_view_stroke_ratio" format="float" />
        <attr name="oh_progress_view_show_percentage" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AnimatedProgressBar">
        <attr name="oh_progress_bar_primary_progress_color" format="color|reference" />
        <attr name="oh_progress_bar_secondary_progress_color" format="color|reference" />
        <attr name="oh_progress_bar_progress_base_color" format="color|reference" />
        <attr name="oh_progress_bar_primary_progress" format="float" />
        <attr name="oh_progress_bar_secondary_progress" format="float" />
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="oh_triggerOffset" format="float" />
        <attr name="oh_flingFactor" format="float" />
        <attr name="oh_singlePageFling" format="boolean" />
        <attr name="oh_overlap_ratio" format="float" />
        <attr name="oh_overlap_amount" format="dimension" />
        <attr name="oh_last_item_fully_fill" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="OHIconProgressView">
        <attr name="oh_icon_progress_view_icons" format="reference"></attr>

    </declare-styleable>
</resources>